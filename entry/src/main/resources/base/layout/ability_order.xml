<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DependentLayout
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:background_element="#FFEAE4E4">
        <Text
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:center_in_parent="true"
            ohos:text="填写订单"
            ohos:text_alignment="center"
            ohos:text_color="#FF0B51CB"
            ohos:text_size="20fp"/>
        <Button
            ohos:id="$+id:btn_backup"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:left_margin="5vp"
            ohos:text="返回"
            ohos:text_alignment="center"
            ohos:text_color="#FF0B51CB"
            ohos:text_size="20fp"/>
    </DependentLayout>
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:padding="20vp">
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="收货人姓名"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="10vp"/>
        <TextField
            ohos:id="$+id:tf_name"
            ohos:height="30vp"
            ohos:width="match_parent"
            ohos:text_color="#FF161616"
            ohos:text_size="18fp"
            ohos:top_margin="5vp"/>
        <Component
            ohos:height="1px"
            ohos:width="match_parent"
            ohos:background_element="black"
            ohos:top_margin="5vp"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="收货人电话号码"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="20vp"/>
        <TextField
            ohos:id="$+id:tf_phone"
            ohos:height="30vp"
            ohos:width="match_parent"
            ohos:text_color="#FF151616"
            ohos:text_size="18fp"
            ohos:top_margin="5vp"/>
        <Component
            ohos:height="1px"
            ohos:width="match_parent"
            ohos:background_element="black"
            ohos:top_margin="5vp"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="收货地址"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="20vp"/>
        <TextField
            ohos:id="$+id:tf_address"
            ohos:height="30vp"
            ohos:width="match_parent"
            ohos:text_color="#FF0D0D0E"
            ohos:text_size="18fp"
            ohos:top_margin="5vp"/>
        <Component
            ohos:height="1px"
            ohos:width="match_parent"
            ohos:background_element="black"
            ohos:top_margin="5vp"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="已选商品"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="20vp"/>
        <ListContainer
            ohos:id="$+id:listContainer_order"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:top_margin="10vp"
            ohos:min_height="260vp"
            ohos:background_element="#FFCFCDCD"
            ohos:weight="1" />
        <Component
            ohos:height="1px"
            ohos:width="match_parent"
            ohos:background_element="black"
            ohos:top_margin="5vp"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="总价(￥）"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="20vp"/>
        <Text
            ohos:id="$+id:t_sum"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="0.0"
            ohos:text_color="#FFEC0F29"
            ohos:text_size="18fp"
            ohos:top_margin="5vp"/>
        <Component
            ohos:height="1px"
            ohos:width="match_parent"
            ohos:background_element="black"
            ohos:top_margin="5vp"/>
        <Button
            ohos:id="$+id:settlement_button_order"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:background_element="red"
            ohos:text="提交"
            ohos:text_alignment="center"
            ohos:text_color="#FFECEDF3"
            ohos:text_size="22fp"
            ohos:top_margin="25vp"
            ohos:bottom_margin="20vp"/>
    </DirectionalLayout>
</DirectionalLayout>