<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#FFE8ECE3"
    ohos:padding="30vp"
    >

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="张三商城"
        ohos:text_size="40vp"
        ohos:text_color="#FF1E4873"
        >
    </Text>

    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="只有你想不到，没有我张三找不到"
        ohos:top_margin="10vp"
        ohos:text_size="18fp"
        ohos:text_color="#FF141515"

        />

    <TextField
        ohos:id="$+id:login_name"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#FF1B0A1F"
        ohos:text_size="25vp"
        ohos:hint="请输入用户名"
        ohos:text="17611573229"
        ohos:text_input_type="pattern_text"
        ohos:text_alignment="bottom"
        ohos:top_margin="80vp"
        >
    </TextField>
    <Component
        ohos:width="match_parent"
        ohos:height="1fp"
        ohos:background_element="#FF145B81"
        ohos:top_margin="5vp">
    </Component>

    <TextField
        ohos:id="$+id:login_pwd"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#FE130101"
        ohos:text_size="25vp"
        ohos:hint="请输入密码"
        ohos:text="qqqqqq"
        ohos:text_input_type="pattern_text"
        ohos:text_alignment="bottom"
        ohos:top_margin="40vp"
        >
    </TextField>
    <Component
        ohos:width="match_parent"
        ohos:height="1fp"
        ohos:background_element="#FF145B81"
        ohos:top_margin="5vp">
    </Component>
    <Checkbox
       ohos:id="$+id:reMe"
       ohos:height="match_content"
       ohos:width="match_content"
       ohos:text="记住我"
       ohos:top_margin="30vp"
       ohos:text_size="20vp"
        >
    </Checkbox>
    <Button
        ohos:id="$+id:login_btn"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="登    录"
        ohos:text_size="30vp"
        ohos:text_alignment="center"
        ohos:top_margin="50vp"
        ohos:text_color="#000000"
        ohos:background_element="$graphic:background_login"
        >
    </Button>
    <Button
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="点击注册"
        ohos:text_size="20vp"
        ohos:text_alignment="center"
        ohos:text_color="#000000"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="20vp"
        >
    </Button>

    <Image
        ohos:id="$+id:login_image"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout_alignment="center"
        ohos:image_src="$media:login_image"
        ohos:alpha="0.3"
        >
    </Image>
</DirectionalLayout>