<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#f1f3f5">

    <DependentLayout
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:background_element="blue">

        <Text
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:center_in_parent="true"
            ohos:text="用户注册"
            ohos:text_alignment="center"
            ohos:text_color="#FFEAE3E3"
            ohos:text_size="20fp"/>

        <Button
            ohos:id="$+id:btn_backup"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:left_margin="5vp"
            ohos:text="返回"
            ohos:text_alignment="center"
            ohos:text_color="#FFF3F1F1"
            ohos:text_size="20fp"/>
    </DependentLayout>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:padding="30vp">

        <TextField
            ohos:id="$+id:tf_name"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:element_cursor_bubble="#00000000"
            ohos:hint="请输入帐号"
            ohos:multiple_lines="false"
            ohos:text=""
            ohos:text_alignment="bottom"
            ohos:text_input_type="pattern_text"
            ohos:text_size="14fp"
            ohos:top_margin="60vp"
            ohos:vertical_center="true"/>

        <Component
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#33000000"
            ohos:top_margin="5vp"/>

        <TextField
            ohos:id="$+id:tf_password"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:element_cursor_bubble="#00000000"
            ohos:hint="请输入密码"
            ohos:multiple_lines="false"
            ohos:text=""
            ohos:text_alignment="bottom"
            ohos:text_input_type="pattern_password"
            ohos:text_size="14fp"
            ohos:top_margin="30vp"
            ohos:vertical_center="true"/>

        <Component
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#33000000"
            ohos:top_margin="5vp"
            />

        <TextField
            ohos:id="$+id:tf_password2"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:element_cursor_bubble="#00000000"
            ohos:hint="请输入确认密码"
            ohos:multiple_lines="false"
            ohos:text=""
            ohos:text_alignment="bottom"
            ohos:text_input_type="pattern_password"
            ohos:text_size="14fp"
            ohos:top_margin="30vp"
            ohos:vertical_center="true"/>

        <Component
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#33000000"
            ohos:top_margin="5vp"
            />

        <Button
            ohos:id="$+id:btn_register"
            ohos:height="40vp"
            ohos:width="match_parent"
            ohos:background_element="$graphic:background_login"
            ohos:text="注     册"
            ohos:text_alignment="center"
            ohos:text_color="#F2FFFFFF"
            ohos:text_size="20vp"
            ohos:top_margin="60vp"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:orientation="horizontal"
            ohos:top_margin="300vp">

            <Text
                ohos:id="$+id:helpText"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="帮助"
                ohos:text_alignment="center"
                ohos:text_color="#0A59F7"
                ohos:text_size="14fp"/>

            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="1vp"
                ohos:background_element="#33000000"
                ohos:end_margin="8vp"
                ohos:start_margin="8vp"/>

            <Text
                ohos:id="$+id:privateText"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="私有的"
                ohos:text_alignment="center"
                ohos:text_color="#0A59F7"
                ohos:text_size="14fp"/>
        </DirectionalLayout>
    </DirectionalLayout>
</DirectionalLayout>